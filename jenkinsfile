pipeline {
    agent any

    environment {
        DOCKER_HUB_USER = 'm7md1667'
        DOCKER_IMAGE_NAME = 'node-app'
        DOCKER_CREDS = credentials('docker-hub-credentials') 
        FULL_IMAGE_TAG = "${DOCKER_HUB_USER}/${DOCKER_IMAGE_NAME}:${BUILD_NUMBER}"
    }

    stages {

        stage('Checkout SCM') {
              steps {
                       git branch: "main", credentialsId: 'gittoken', url:'https://github.com/mohamedserafi67-debug/jenfile'
              }
       }
        stage('Build Docker Image') {
            steps {
                // Use 'sh' instead of 'docker.build'
                sh "docker build -t ${FULL_IMAGE_TAG} ."
            }
        }

        stage('Push Docker Image') {
            steps {
                sh "echo ${DOCKER_CREDS_PSW} | docker login -u ${DOCKER_CREDS_USR} --password-stdin"
                sh "docker push ${FULL_IMAGE_TAG}"
                sh "docker push ${DOCKER_HUB_USER}/${DOCKER_IMAGE_NAME}:latest"
                sh "docker logout"
            }
        }
    }
}